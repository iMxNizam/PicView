<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/allPhotoImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="2dp"
        android:contentDescription="@string/imageRaw"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_picview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_video"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/allPhotoImageView"
        app:layout_constraintEnd_toEndOf="@+id/allPhotoImageView"
        app:layout_constraintStart_toStartOf="@+id/allPhotoImageView"
        app:layout_constraintTop_toTopOf="@+id/allPhotoImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>