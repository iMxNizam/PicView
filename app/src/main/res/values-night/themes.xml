<resources >
    <!-- Base application theme. -->
    <style name="Base.Theme.PicView" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorBackground">@color/black</item>
    </style>
    <style name="Base.Theme.PicView_menu" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/black</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/backGroundColor</item>
    </style>

    <style name="Base.Theme.PicView.FullScreenMedia" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorBackground">@color/backGroundColor</item>
    </style>
</resources>